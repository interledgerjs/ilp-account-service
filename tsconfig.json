{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "test/*.ts"
  ]
}