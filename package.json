{
  "name": "ilp-account-service",
  "version": "0.0.0",
  "description": "",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "npm run schema-to-tsd && tsc",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "schema-to-tsd": "node scripts/build_schema_types",
    "test": "nyc mocha",
    "lint": "tslint --project .",
    "codecov": "codecov",
    "doc": "typedoc --options typedoc.js src",
    "publish-docs": "npm run doc && node scripts/publish-docs.js"
  },
  "files": [
    "src/*.js",
    "src/*.js.map",
    "src/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp-account-service.git"
  },
  "keywords": [
    "interledger",
    "account service"
  ],
  "author": "Adrian Hope-Bailie <adrian@ripple.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/interledgerjs/ilp-account-service/issues"
  },
  "homepage": "https://github.com/interledgerjs/ilp-account-service#readme",
  "dependencies": {
    "bignumber.js": "^8.0.1",
    "debug": "^3.1.0",
    "ilp-compat-plugin": "^2.0.3",
    "ilp-connector": "^22.1.0",
    "ilp-logger": "^1.1.2",
    "ilp-plugin-btp": "^1.1.8",
    "ilp-protocol-btp3": "github:matdehaast/ilp-protocol-btp3#mat-grpc",
    "ilp-transport-grpc": "github:interledgerjs/ilp-transport-grpc",
    "prom-client": "^11.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/debug": "0.0.30",
    "@types/long": "^3.0.32",
    "@types/mocha": "^2.2.45",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^8.5.2",
    "@types/sinon": "^4.1.2",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "gh-pages": "^1.1.0",
    "ilp-protocol-ildcp": "^1.0.0",
    "json-schema-to-typescript": "^6.0.1",
    "mocha": "^4.1.0",
    "mocha-typescript": "^1.1.12",
    "mock-require": "^2.0.2",
    "nyc": "^11.4.1",
    "sinon": "^4.1.3",
    "source-map-support": "^0.5.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.2"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  }
}
